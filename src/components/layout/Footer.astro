---
const currentYear = new Date().getFullYear();

const navLinks = [
  { label: 'Projects', href: '/projects' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
];

const legalLinks = [
  { label: 'Privacy', href: '/privacy' },
  { label: 'Terms', href: '/terms' },
  { label: 'Cookies', href: '/cookies' },
];

const socialLinks = [
  { label: 'Facebook', href: 'https://www.facebook.com/byshakir', icon: 'facebook' },
  { label: 'Instagram', href: 'https://www.instagram.com/byshakir_interiors/', icon: 'instagram' },
  { label: 'Threads', href: 'https://www.threads.com/@byshakir_interiors/', icon: 'threads' },
];
---

<footer class="bg-charcoal border-t border-gold/10">
  <div class="container-luxury py-16 lg:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Logo & Description -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img
            src="/images/logo.svg"
            alt="By Shakir Luxury Interiors"
            class="h-10 w-auto"
            loading="lazy"
          />
        </a>
        <p class="text-taupe text-sm leading-relaxed">
          Crafting extraordinary interiors for discerning clients worldwide since 2008.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-gold font-serif text-lg mb-6">Navigation</h4>
        <ul class="space-y-3">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-cream/70 hover:text-gold transition-colors duration-300 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-gold font-serif text-lg mb-6">Contact</h4>
        <ul class="space-y-3 text-sm">
          <li>
            <a
              href="tel:+31344655473"
              class="text-cream/70 hover:text-gold transition-colors duration-300"
            >
              +31 344 655 473
            </a>
          </li>
          <li>
            <a
              href="mailto:info@byshakir.nl"
              class="text-cream/70 hover:text-gold transition-colors duration-300"
            >
              info@byshakir.nl
            </a>
          </li>
          <li>
            <a
              href="https://wa.me/31618658059"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cream/70 hover:text-gold transition-colors duration-300"
            >
              WhatsApp
            </a>
          </li>
        </ul>

        <!-- Social Links -->
        <div class="mt-6">
          <h5 class="text-cream/90 text-sm font-medium mb-3">Follow Us</h5>
          <div class="flex items-center gap-4">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-cream/70 hover:text-gold transition-colors duration-300"
                aria-label={social.label}
              >
                {social.icon === 'facebook' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
                {social.icon === 'threads' && (
                  <img
                    src="/icons/threads.svg"
                    alt="Threads"
                    class="w-5 h-5 invert brightness-0"
                    loading="lazy"
                  />
                )}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Locations -->
      <div>
        <h4 class="text-gold font-serif text-lg mb-6">Locations</h4>
        <div class="space-y-4 text-sm">
          <div>
            <p class="text-cream/90 font-medium">Netherlands</p>
            <p class="text-cream/60">Gijsbert Stoutweg 8</p>
            <p class="text-cream/60">4005 LE Tiel</p>
          </div>
          <div>
            <p class="text-cream/90 font-medium">Morocco</p>
            <p class="text-cream/60">Tanger</p>
            <p class="text-gold/70 text-xs italic">Coming Soon</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="gold-line my-12"></div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-taupe text-sm">
        &copy; {currentYear} By Shakir Luxury Interiors. All rights reserved.
      </p>

      <div class="flex items-center gap-6">
        {legalLinks.map((link) => (
          <a
            href={link.href}
            class="text-taupe hover:text-gold transition-colors duration-300 text-sm"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
